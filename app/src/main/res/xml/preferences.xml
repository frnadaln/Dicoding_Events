<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference
        android:title="@string/bottom_title_setting"
        android:layout="@layout/fragment_setting"/>

    <SwitchPreference
        android:defaultValue="false"
        android:key="themeKey"
        android:title="Dark Mode"
        android:summary="Enable/Turn off dark mode"/>

    <SwitchPreference
        android:defaultValue="false"
        android:key="notificationKey"
        android:title="Daily Notification"
        android:summary="Set notification for nearest Event date"/>
</PreferenceScreen>
